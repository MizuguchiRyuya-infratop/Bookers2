<div class="body">
  <div class="container">
    <p id="notice"></p>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1>Editing Book</h1>
        <%= form_for @book do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
          <div class="field row">
            <%= f.label :title %>
            <%= f.text_field :title, value: f.object.title, class: 'col-xs-12 book_title' %>
          </div>

          <div class="field row">
            <%= f.label :body %>
            <%= f.text_area :body, value: f.object.body, class: 'col-xs-12 book_body' %>
          </div>

          <div class="actions row">
            <%= f.submit 'Update Book', class: 'btn btn-primary col-xs-12',data: { disable_with: "Updating..." } %>
          </div>
        <% end %>
        <%= link_to 'Show', book_path(@book.id) %> |
        <%= link_to 'Back', books_path %>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
</div>
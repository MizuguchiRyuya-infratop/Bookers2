<div class="body">
  <div class="container">
    <p id="notice"></p>
    <h2>User info</h2>
    <%= form_for @user do |f| %>

      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :profile_image %>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      </div>

      <div class="field">
        <%= f.label :introduction %>
        <%= f.text_area :introduction %>
      </div>

      <div class="actions">
        <%= f.submit 'Update User', data: { disable_with: "Updating..." } %>
      </div>

    <% end %>
  </div>
</div>